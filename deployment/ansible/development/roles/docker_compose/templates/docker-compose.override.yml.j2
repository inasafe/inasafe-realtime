      - ./docker-realtime/realtime-rest.env
    volumes:
      - ../inasafe:/usr/share/qgis/python/plugins/inasafe
      - ../src/realtime:/home/app/realtime
      - ../shakemaps-corrected:/home/realtime/shakemaps
